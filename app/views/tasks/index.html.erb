<h1>My tasks</h1>

<div class="mt-5"><ul style="list-style: none; padding: 0;">
<% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" }, :class => "far fa-trash-alt pl-1" %>
  </li>
<% end %>
</ul></div>

<hr>

<%= link_to tasks_new_path, :class => "add_task_btn" do %>
  <i class="fas fa-plus pr-1"></i>Add task
<% end %>






